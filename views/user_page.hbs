<html>
    <head>
        <link rel="stylesheet" type="text/css" href="css/user.css">
      <link rel="stylesheet" type="text/css" href="css/nes.css/css/nes.css">

        <title>
        IGDB - {{username}}'s Profile
        </title>
    </head>
    <body>
<div class = "header">
    <!--Header image here-->
    <div id="header_logo" class="nes-container is-rounded is-dark" style="background-color: rebeccapurple !important">
      <center>
        <span id="banner_title">INTERNET GAMES DATABASE</span>
      </center>
    </div>
    <div id ="links">
        <a class="nes-btn" href ="/"> Home</a> 
        <a class="nes-btn" href ="/database"> Database</a> 
        {{#if susername}}
          <a class="nes-btn" href="/user_page?uid={{uid}}">User Page</a>
          <a class="nes-btn" href="/logout">Sign out {{susername}}</a>
        {{else}}        
          <a class="nes-btn" href="/login">Sign In/Register</a>
        {{/if}}
        <a class="nes-btn" href="/about">About</a>
    </div>
    <div id="sitesearch">
      <form method="GET" action="search" id = "search">
          <button type="submit" value="Search" class="nes-btn" style="float:left">Search</button>
          <div class="nes-select siteselect">
            <select name="search_select">
              <option value="user">Users</option>
              <option value="game">Games</option>
            </select>
          </div>
          <div class="nes-field is-inline"  >
              <input style="margin-left:8px !important" type="search" name="query" placeholder="Search Game Titles or Users.." class="nes-input">
          </div>
      </form>
    </div>
</div>
      
      <div class = "page">
            <div class = "panel nes-container is-rounded">
                <h3>Welcome to {{username}}'s User Page</h3>
            </div>
            <div class = "panel nes-container is-rounded">
                <table>
                  <tr>
                    <th><h3>Reviews</h3></th>
                    <th><h3>Comments</h3></th>
                    <th><h3>Options</h3></th>
                  </tr>
                {{#each reviews}}
                  <tr>
                    <td><a href="/review?id={{_id}}">{{title}}</a></td>
                    <td>{{comments.length}}</td>
                    <td><a class="nes-btn" href="/review_edit?id={{_id}}">Edit</a></td>
                    <td><a class="nes-btn" href="/review_del?id={{_id}}">Delete</a></td>
                  </tr>
                {{/each}}
                </table>
            </div>
            <div class = "panel nes-container is-rounded">
              <div id = "playlist_s">
                <table>
                  <tr>
                    <th><h3>Playlists</h3></th>
                    <th><h3>Description</h3></th>
                    <th><h3>Options</h3></th>
                  </tr>
                {{#each playlists}}
                  <tr>
                    <td><a href="/playlist?id={{_id}}">{{title}}</a></td>
                    <td>{{description}}</td>
                    <td><a class="nes-btn" href="/playlist_edit?id={{_id}}">Edit</a></td>
                    <td><a class="nes-btn" href="/playlist_del?id={{_id}}">Delete</a></td>
                  </tr>
                {{/each}}
                </table>
              </div>
        {{#if owned}}
          <button id="addnew" class="nes-btn">New Playlist</button>
        {{/if}}
        <div id="makenew" class="modal">
          <!-- Modal content -->
          <div class="modal-content">
            <span class="close">&times;</span>
            <div class = "forms">
              <div class ="form_title"><h1>Add new Playlist</h1></div>
              <form class = "form_form" id = "form_form" method="POST" action="playlist">
              <p>Playlist Name</p>
              <input type = "text" id = "play_title" name="title" placeholder = "Playlist name">
              <p>Playlist Description </p>
              <input type = "text" id = "play_desc" name="description" placeholder = "Playlist Description">
              <p>Playlist Visibility </p>
              <select name="private">
                              <option value="False">Public</option>
                              <option value="True">Private</option>
                          </select><br>
              <button id = "submit">Submit</button>
            </form>
            <br>
          </div>
        
        </div>
      </div> 
            </div>
            <div class = "panel nes-container is-rounded">

              <div id = "comment_s">
                <table>
                  <tr>
                    <th><h3>Comments</h3></th>
                    <th><h3>Options</h3></th>
                  </tr>
                {{#each comments}}
                  <tr>
                    <td><a href="/review?id={{review_id}}">{{comment}}</a></td>
                    <td><a class="nes-btn" href="/comment_edit?id={{_id}}">Edit</a></td>
                    <td><a class="nes-btn" href="/comment_del?id={{_id}}">Delete</a></td>
                  </tr>
                {{/each}}
                </table>
              </div>
            </div>
        </div>
          <script src = "js/playlist.js"></script>
    </body>
</html>
